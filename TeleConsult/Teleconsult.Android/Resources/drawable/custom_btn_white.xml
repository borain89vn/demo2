<?xml version="1.0" encoding="UTF-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >   
	<item android:state_pressed="true" >
		<shape>
	        <gradient
	            android:startColor="@color/light_grey"
	            android:endColor="@color/light_grey"
	            android:centerColor="@color/light_grey"
	            android:angle="270" />		   
		    <corners
				android:radius="1dp"
		        />     
            <padding
		        android:bottom="0dp"
		        android:left="25dp"
		        android:right="25dp"
		        android:top="0dp" />     
		</shape>  
 	</item>
    <item>
	    <shape>
	        <gradient
	            android:startColor="@color/white"
	            android:endColor="@color/white"
	            android:centerColor="@color/white"
	            android:angle="270" />
            <padding
		        android:bottom="0dp"
		        android:left="25dp"
		        android:right="25dp"
		        android:top="0dp" /> 
	    </shape>
	</item>
</selector>
